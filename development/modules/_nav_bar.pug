mixin selectLinkPage({chronology, series, movies, mangas}, isSmall = true)
  - let unSelectionClass = ["button", "clear", "alert"] 
  - let selectionClass = isSmall ? ["button", "rounded", "shadow", "bordered", "alert"] : unSelectionClass

  - let chronologyIsActive = (chronology == '#') ? true : false
  - let seriesIsActive = (series == '#') ? true : false
  - let moviesIsActive = (movies == '#') ? true : false
  - let mangasIsActive = (mangas == '#')

  - let smallClass = ["columns", "small-12", "show-for-small-only", "padding-top-1", "row"]
  - let largeClass = ["columns", "large-4", "shrink", "show-for-large", "padding-0"]

  div(class=isSmall ? smallClass : largeClass)
    div.columns.shrink
      ul.menu
        li
          a(href=chronology, 
            class=chronologyIsActive ? selectionClass : unSelectionClass, 
            style=(!isSmall && chronologyIsActive) ? {color: "#67251a"} : {}) Chronology
        li
          a(href=series, 
            class=seriesIsActive ? selectionClass : unSelectionClass, 
            style=(!isSmall && seriesIsActive) ? {color: "#67251a"} : {}) Series
        li
          a(href=movies, 
            class=moviesIsActive ? selectionClass : unSelectionClass, 
            style=(!isSmall && moviesIsActive) ? {color: "#67251a"} : {}) Movies
        li
          a(href=mangas, 
            class=mangasIsActive ? selectionClass : unSelectionClass, 
            style=(!isSmall && mangasIsActive) ? {color: "#67251a"} : {}) Mangas

mixin navigationBar (pagesPath, imgPath="../img/fate_logo.png")
  nav.row.expanded.padding-vertical-1
    div.columns.small-12.medium-8.large-8
      div.flex-container.align-center
        a(href="#").flex-container 
          img(src=imgPath, style={width: "3em"})
    
    +selectLinkPage(pagesPath, false)
    +selectLinkPage(pagesPath)
